<Window x:Class="MasterPol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPol"
        mc:Ignorable="d"
        Title="Список заявок партнеров" Height="450" Width="800"
        Loaded="Window_Loaded"
        FontFamily="Comic Sans MS"
        FontSize="14">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="AddRequestButton" Content="Добавить заявку" Click="AddRequestButton_Click" 
                    Background="#FF0C4882" Foreground="White" Padding="10,5" FontWeight="Bold" Margin="0,0,5,0"/>
            <Button x:Name="Calculations" Content="Расчет"  
                    Background="#FF0C4882" Foreground="White" Padding="10,5" FontWeight="Bold" Margin="0,0,5,0" Click="Calculations_Click"/>
        </StackPanel>

        <!-- Список заявок -->
        <ListBox Grid.Row="1" x:Name="requestsList"
                 MouseDoubleClick="requestsList_MouseDoubleClick"
                 SelectedValuePath="PartnerId"
                 Margin="10" Background="#FFBBDCFA">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="#546F94" Width="850" Height="130" 
                            Margin="0,5,0,5" Background="White" Cursor="Hand">
                        <Grid Width="840" Height="120">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Заголовок: тип + наименование -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                                       FontSize="16" FontWeight="Bold" 
                                       Text="{Binding PartnerNameWithType}" 
                                       Margin="10,5,0,5" Foreground="#546F94"/>

                            <!-- Юридический адрес -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Адрес:" Margin="10,0,0,0" FontSize="12"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PartnerAddress}" 
                                       Margin="5,0,0,0" FontSize="12"/>

                            <!-- Телефон -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон:" Margin="10,0,0,0" FontSize="12"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PartnerPhone}" 
                                       Margin="5,0,0,0" FontSize="12"/>

                            <!-- Рейтинг -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Рейтинг:" Margin="10,0,0,0" FontSize="12"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding PartnerRating, StringFormat='{}{0:F1}'}" 
                                       Margin="5,0,0,0" FontSize="12"/>

                            <!-- Стоимость заявки (справа внизу) -->
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                       Text="{Binding TotalCost, StringFormat='{}Стоимость заявки: {0:F2} р'}"
                                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                       Margin="0,0,10,5" FontSize="14" FontWeight="Bold" Foreground="#546F94"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
